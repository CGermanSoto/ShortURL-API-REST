{{#if url}}
    <form action="/editar/{{url._id}}" method="POST">
        <input type="text" value="{{url.origin}}" name="origin" class="form-control my-2">
        <button type="submit" class="btn btn-primary w-100 mb-2 ">guardar</button>
    </form>

    {{else}}
    <form action="/" method="POST">
        <input type="text" placeholder="Ingrese URL" name="origin" class="form-control my-2">
        <button type="submit" class="btn btn-primary w-100 mb-2 ">agregar</button>
    </form>
{{/if}}
          